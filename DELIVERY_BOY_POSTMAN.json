                  "    pm.environment.set('delivery_token', jsonData.token);",
                  "    pm.environment.set('delivery_boy_id', jsonData.data._id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john.delivery@example.com\",\n  \"password\": \"SecurePass123\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/delivery/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "delivery", "login"]
            }
          }
        },
        {
          "name": "Logout Delivery Boy",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{delivery_token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:5000/api/delivery/logout",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "delivery", "logout"]
            }
