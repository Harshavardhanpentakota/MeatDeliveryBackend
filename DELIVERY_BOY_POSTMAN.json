// Postman Collection Examples for Delivery Boy API
// Import these into Postman for easy testing

{
  "info": {
    "name": "Delivery Boy API",
    "description": "Complete API collection for Meat Delivery Delivery Boy System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register Delivery Boy",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('delivery_token', jsonData.token);",
                  "    pm.environment.set('delivery_boy_id', jsonData.data._id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"email\": \"john.delivery@example.com\",\n  \"password\": \"SecurePass123\",\n  \"phone\": \"+919876543210\",\n  \"licenseNumber\": \"DL1234567890\",\n  \"licenseExpiryDate\": \"2026-12-31\",\n  \"vehicleType\": \"two-wheeler\",\n  \"vehicleRegistration\": \"DL01AB1234\",\n  \"vehicleModel\": \"Honda Activa\",\n  \"address\": \"123 Main Street\",\n  \"city\": \"Delhi\",\n  \"state\": \"Delhi\",\n  \"zipCode\": \"110001\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/delivery/register",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "delivery", "register"]
            }
          }
        },
        {
          "name": "Login Delivery Boy",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
